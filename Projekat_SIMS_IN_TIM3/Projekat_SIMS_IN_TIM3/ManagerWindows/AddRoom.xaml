<Window x:Class="Projekat_SIMS_IN_TIM3.ManagerWindows.AddRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat_SIMS_IN_TIM3.ManagerWindows"
        mc:Ignorable="d"
        Title="AddRoom" Height="350" Width="350">
    <Grid>
        <Label Content="Adding New Room" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="24" Foreground="Black"/>
        <Label Content="*Note ALL fields are necessary" HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top" Foreground="Red"/>
        <Label Content="Room Name:" HorizontalAlignment="Left" Margin="53,108,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Type:" HorizontalAlignment="Left" Margin="53,137,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Description:" HorizontalAlignment="Left" Margin="53,168,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox HorizontalAlignment="Left" Margin="175,112,0,0" TextWrapping="Wrap" Text="{Binding Namew}" VerticalAlignment="Top" Width="120" FontSize="16"/>
        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" ItemsSource="{Binding Path=RoomTypes}" SelectedValue="{Binding Path=RoomTypeSelected}" Margin="175,142,0,0"/>
        <TextBox HorizontalAlignment="Left" Margin="175,172,0,0" TextWrapping="Wrap" Text="{Binding Description}" VerticalAlignment="Top" Width="120" FontSize="16"/>
        <Button Content="Confirm" HorizontalAlignment="Left" Margin="71,251,0,0" VerticalAlignment="Top" Height="32" Width="84" Background="Lime" FontWeight="Bold" Click="Confirm_Button"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="195,251,0,0" VerticalAlignment="Top" Height="32" Width="84" Background="Red" FontWeight="Bold" Click="Cancel_Button"/>
        <Label Content="Floor:" HorizontalAlignment="Left" Margin="53,196,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox HorizontalAlignment="Left" Margin="175,200,0,0" TextWrapping="Wrap" Text="{Binding Floor}" VerticalAlignment="Top" Width="120" FontSize="16"/>

    </Grid>
</Window>
